{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClaudeCodeProxy",
  "version": "1.2.3",
  "identifier": "com.claudecodeproxy",
  "build": {
    "beforeDevCommand": "cd src-ui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd src-ui && npm run build",
    "frontendDist": "../src-ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    }
  },
  "app": {
    "windows": [
      {
        "title": "ClaudeCodeProxy",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
